
<div class="login-styler">
  <div class="jumbo">
    {{# if loggedOut}}
    <div class="alert alert-danger" role="alert">
      Your have logged out successfully !!
    </div>
    {{/if}}
    <h1 class="display-3"><b>Login</b></h1>
    <h5>Kindly enter your Username and Password details.</h5><br>
    
      {{# unless PassWordError }}
        {{# unless UserNameError }}
          <div class="alert alert-primary alert-dismissible fade show form-signin" role="alert">
            Kindly verify your <strong>Username</strong> and <strong>Password</strong> details before Logging in.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        {{ else }}
          <div class="alert alert-danger alert-dismissible fade show form-signin" role="alert">
            {{{ UserNameError }}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        {{/unless}}
      {{ else }}
        <div class="alert alert-danger alert-dismissible fade show form-signin" role="alert">
          {{{ PassWordError }}}
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      {{/unless}}
    <br>
    <div style="padding-right:50">
      <form method="post" class="form-signin" action="/login">

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" ><b>@</b> </span>
          </div>
          {{# unless UserNameError }}
            <input type="text" class="form-control ctrl" name="username" placeholder="Username" required autofocus>
          {{ else }}
            <input type="text" class="form-control ctrl is-invalid" name="username" placeholder="Username" required autofocus>
            <div class="invalid-feedback">
              Invalid Username. Please enter a valid username.
            </div>

