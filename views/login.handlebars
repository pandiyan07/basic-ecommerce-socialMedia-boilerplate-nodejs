              </div>
            </div-->
          {{/unless}}
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" ><b>P</b></span>
          </div>
          {{# unless PassWordError }}
            <input type="password" class="form-control ctrl" name="password" placeholder="Password" required>
          {{ else }}
            <input type="password" class="form-control ctrl is-invalid" name="password" placeholder="Password" required>
            <div class="invalid-feedback">
              Incorrect Password. Please enter the correct password.
            </div>
          {{/unless}}
        </div>
        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <div class="row">
          <div class="col" style="text-align:left">
            <button  type="submit" class="btn btn-primary">Login</button>
          </div>
          <div class="col" style="text-align:right;padding-top:10px;">
          <h5 ><a href="/register"> Register now</a></h5>
          </div>
        </div>
      </form>
    </div>
      
